<div class="container">
  <div class="row mx-0">
    <div class="col-md-6 offset-md-3">
      <div class="jumbotron">

        <%= form_with scope: :session, local: true do |form| %>
          <div class="form-group">
            <%= form.label :username, class: 'font-weight-bold' %><br>
            <%= form.text_field :username, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :password, class: 'font-weight-bold' %><br>
            <%= form.password_field :password, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.submit 'Login', class: 'btn btn-primary' %>
          </div>
        <% end %>

        <p>
          [ <%= link_to 'Sign up', signup_path %> ]
        </p>

      </div>
    </div>
  </div>

</div>