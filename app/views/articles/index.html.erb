<h2>Articles Listing Page</h2>

<table cellpadding="10">

  <thead>
  <tr>
    <th>S/N</th>
    <th>Name</th>
    <th>Description</th>
    <th>Action</th>
  </tr>
  </thead>

  <tbody>
    <% @articles.each_with_index do |article, index| %>
    <tr>
      <td> <%= index + 1 %> </td>
      <td> <%= article.name %> </td>
      <td> <%= article.description %> </td>
      <td>Placeholder</td>
    </tr>
    <% end %>
  </tbody>

</table>