<h2 class="text-center mb-4"><%= header_text %></h2>

<div class="container">
  <div class="row mx-0">
    <div class="col-md-6 offset-md-3">
      <div class="jumbotron">

        <!-- Error Message-->
        <% if @article.errors.any? %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%  errors = @article.errors.full_messages %>
                <p>Some errors occurred when saving articles</p>
                <ul>
                  <% errors&.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
            </div>
        <% end %>


        <%= form_with model: @article, local: true do |form| %>
          <div class="form-group">
            <%= form.label :name, class: 'font-weight-bold' %><br>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :description, class: 'font-weight-bold' %><br>
            <%= form.text_area :description, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.submit class: 'btn btn-primary' %>
          </div>
        <% end %>

        <p>
          <%= link_to 'Go to articles listings', articles_path %>
        </p>

      </div>
    </div>
  </div>

</div>

