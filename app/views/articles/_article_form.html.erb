<h2 class="text-center mb-4"><%= header_text %></h2>

<div class="container">
  <div class="row mx-0">
    <div class="col-md-6 offset-md-3">
      <div class="jumbotron">

        <%= render 'shared/error', model: @article, placeholder: 'Some errors occurred when saving articles' %>

        <%= form_with model: @article, local: true do |form| %>
          <div class="form-group">
            <%= form.label :name, class: 'font-weight-bold' %><br>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :description, class: 'font-weight-bold' %><br>
            <%= form.text_area :description, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.submit class: 'btn btn-primary' %>
          </div>
        <% end %>

        <p>
          <%= link_to 'Go to articles listings', articles_path %>
        </p>

      </div>
    </div>
  </div>

</div>

