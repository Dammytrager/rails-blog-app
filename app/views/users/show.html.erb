<h2 class="text-center mb-4"><%= @user.username %> Profile</h2>

<%= gravatar_for @user, size: 200 %>

<div class="text-center">
  <% if @user.is?(current_user) || current_user.user_type_admin? %>
    <%= link_to 'Edit Profile', edit_user_path(@user), class: 'btn btn-sm btn-outline-primary mt-4' %>
    <%= link_to 'Delete Account',
                @user,
                class: 'btn btn-sm btn-outline-danger mt-4',
                method: :delete,
                data: { confirm: 'This action will delete this account and all the associated articles, are you sure' }
    %>
  <% end %>
</div>

<div class="container mt-4">
  <h4 class="text-center mb-4">Articles</h4>

  <%= render 'shared/articles_listing', articles: @articles %>
</div>
