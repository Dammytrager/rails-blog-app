<div class="container">
  <div class="row mx-0">
    <div class="col-md-6 offset-md-3">
      <div class="jumbotron">

        <%= render 'shared/error', model: @user, placeholder: 'Some errors occurred when saving users' %>

        <%= form_with model: @user, local: true do |form| %>
          <div class="form-group">
            <%= form.label :username, class: 'font-weight-bold' %><br>
            <%= form.text_field :username, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :email, class: 'font-weight-bold' %><br>
            <%= form.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :password, class: 'font-weight-bold' %><br>
            <%= form.password_field :password, class: 'form-control' %>
          </div>

          <% if show_confirm %>
            <div class="form-group">
              <%= form.label :password_confirmation, class: 'font-weight-bold' %><br>
              <%= form.password_field :password_confirmation, class: 'form-control' %>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.submit submit_btn_text, class: 'btn btn-primary' %>
          </div>
        <% end %>

        <p>
          [ <%= link_to 'Cancel and return to articles listings', articles_path %> ]
        </p>

      </div>
    </div>
  </div>

</div>